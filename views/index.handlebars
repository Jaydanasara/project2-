<h1>Football Battle Royale</h1>





  {{#each games}}
  <form data-id="{{this.id}}" id="{{this.id}}" class="create-form" >
    <div class="form-group">
      <label for="team" value="{{id}}">{{week16}}</label>
      <br>
      <input type="radio" name="team" value="{{this.Home}}" checked> {{Home}}
      <input type="radio" name="team" value="{{this.away}}"> {{away}}
    </div>

    <button data-id="{{this.id}}" type="submit" id="hide">make your pick</button>
   
    <button data-id="{{this.id}}" id="update-form" class="send" >Update pick</button>
  </form>


  {{/each}}

 <button class="delquote">Delete all your picks</button>

 <section class="banners">
        <div class="left-half">
          <article>
            <img src="assets/images/LeftBanner.png" alt="Left Banner">
        </article>
        </div>
        <div class="right-half">
          <article>
            <img src="assets/images/RightBanner.png" alt="Right Banner">
          </article>
        </div>
      </section>



 <a href="/results">view your picks</a>
